<form string="Truck Order">
    <label name="reference"/>
    <field name="reference"/>
    <label name="party"/>
    <field name="party"/>
    <label name="delivery_address"/>
    <field name="delivery_address"/>
    <label name="invoice_address"/>
    <field name="invoice_address"/>
    <label name="vehicle"/>
    <field name="vehicle"/>
    <label name="driver"/>
    <field name="driver"/>
    <group id="dates_times" colspan="4" col="6">
        <label name="order_date"/>
        <field name="order_date"/>
        <label name="start_time"/>
        <field name="start_time"/>
        <label name="end_time"/>
        <field name="end_time"/>
    </group>
    <notebook>
        <page name="notes">
            <field name="notes" colspan="4"/>
            <group id="invoicing" colspan="4" col="4">
                <label name="payment_term"/>
                <field name="payment_term"/>
                <label name="quantity"/>
                <field name="quantity"/>
                <label name="unit_price"/>
                <field name="unit_price"/>
                <label name="discount"/>
                <field name="discount"/>
                <label name="traffic_taxes"/>
                <field name="traffic_taxes"/>
                <label name="tax"/>
                <field name="tax"/>
                <separator id="totals" string="Totals" colspan="4"/>
                <group id="amounts" colspan="4" col="6">
                    <label name="untaxed_amount"/>
                    <field name="untaxed_amount"/>
                    <label name="tax_amount"/>
                    <field name="tax_amount"/>
                    <label name="total_amount"/>
                    <field name="total_amount"/>
                </group>
            </group>
        </page>
        <page name="invoices">
            <field name="invoices" colspan="4"/>
        </page>
    </notebook>
    <group col="4" colspan="4" id="state_buttons">
        <group col="2" colspan="2" id="state">
            <label name="state"/>
            <field name="state"/>
        </group>
        <group col="2" colspan="2" id="buttons">
            <button name="draft" string="Draft"/>
            <button name="done" string="Done"/>
        </group>
    </group>
</form>
